<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle">
            <stroke android:color="#95111d" android:width="3px"/>
            <solid android:color="#ffffff"/>
        </shape>
    </item>
    <item android:gravity="center" android:top="50px">
        <shape android:shape="oval">
            <solid android:color="#6ed5f7"/>
            <size android:width="15px"
                android:height="15px"/>
        </shape>
    </item>

</layer-list>

